// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // For email/password authentication
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  skinProfile   UserSkinProfile?
  evaluations   ProductEvaluation[]
  routines      Routine[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model UserSkinProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  skinType          SkinType
  concerns          String[] // Array of concerns like ["acne", "sensitivity", "dryness"]
  ingredientsToAvoid String[] // Array of ingredient names to avoid
  allergies         String[] // Array of known allergies
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_skin_profiles")
}

enum SkinType {
  OILY
  DRY
  COMBINATION
  SENSITIVE
  NORMAL
}

model Brand {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  website     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  products    Product[]

  @@map("brands")
}

model Product {
  id          String    @id @default(cuid())
  name        String
  brandId     String
  category    ProductCategory
  description String?
  imageUrl    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  brand       Brand     @relation(fields: [brandId], references: [id], onDelete: Cascade)
  ingredients ProductIngredient[]
  evaluations ProductEvaluation[]
  affiliateLinks AffiliateLink[]

  @@unique([name, brandId])
  @@map("products")
}

enum ProductCategory {
  SKINCARE
  HAIRCARE
  MAKEUP
  BODYCARE
}

model Ingredient {
  id              String   @id @default(cuid())
  inciName        String   @unique // INCI (International Nomenclature of Cosmetic Ingredients) name
  commonName      String?  // Common name for display
  function        String?  // What it does (e.g., "Emollient", "Preservative")
  description     String?  @db.Text // Simple English explanation
  isIrritant      Boolean  @default(false)
  isComedogenic   Boolean  @default(false)
  comedogenicRating Int?   // 0-5 scale
  isAllergen      Boolean  @default(false)
  isFragrance     Boolean  @default(false)
  isAlcohol       Boolean  @default(false)
  isSulfate       Boolean  @default(false)
  isParaben       Boolean  @default(false)
  riskLevel       RiskLevel @default(LOW)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  products        ProductIngredient[]
  warnings        IngredientWarning[]

  @@map("ingredients")
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
}

model ProductIngredient {
  id            String     @id @default(cuid())
  productId     String
  ingredientId  String
  concentration String?    // Optional: percentage or position in list
  order         Int        // Order in ingredient list (lower = higher concentration)

  product       Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  ingredient    Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@unique([productId, ingredientId])
  @@map("product_ingredients")
}

model IngredientWarning {
  id            String   @id @default(cuid())
  ingredientId  String
  skinType      SkinType?
  concern       String?  // e.g., "acne", "sensitivity"
  warning       String   @db.Text // Simple explanation
  severity      RiskLevel @default(MEDIUM)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  ingredient    Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@map("ingredient_warnings")
}

model ProductEvaluation {
  id            String   @id @default(cuid())
  productId     String
  userId        String
  verdict       Verdict
  reasoning     String[] // Array of reasoning points
  goodFor       String[] // Array of what it's good for
  cautionFor    String[] // Array of cautions
  notRecommendedFor String[] // Array of not recommended reasons
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([productId, userId])
  @@map("product_evaluations")
}

enum Verdict {
  SUITABLE
  CAUTION
  NOT_RECOMMENDED
}

model Routine {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  products    String[] // Array of product IDs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("routines")
}

model AffiliateLink {
  id          String   @id @default(cuid())
  productId   String
  platform    String   // e.g., "amazon", "sephora", "ulta"
  url         String   @db.Text
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("affiliate_links")
}

